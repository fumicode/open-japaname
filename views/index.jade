extends /template/basic_layout

block variables 
- body_id = "page_index";

block topbar
  include /template/topbar
  +topbar(false,false)

block content

  img(src="/images/risumaru_hang_left.png" style="position:absolute;right:0;top:0;width:20%;z-index:-1000;opacity:0.7")

  div(style="height:50px;")
  h1(style="text-align:center;") Get Your <br>
    img(src="/images/japaname_logo_800.png" alt="japaname" style="max-width:90%;")

  include /include/ateji_search.jade

  
  table
    tr
      td(style="width:20%;opacity:0.7")
        img(src="/images/risumaru_yubi_right.png")
      td(style="width:80%")
        +ateji_search(null,null,null,true)
        p.text-center(style="opacity:0.7")
          br
          |Accepts 
          strong Alphabet
          |, 
          strong ひらがな
          |, 
          strong カタカナ

  
  div(style="text-align:center;")
    h2 Japaname Ninja Masa in Shibuya & Asakusa
    <iframe width="560" height="315" src="https://www.youtube.com/embed/YvLrDmVK9Og" frameborder="0" allowfullscreen></iframe>

    div(style="height:100px")



  
  div.shopHeader
    div.shopHeader__icon
      div.shopIcon
        img.shopIcon__image(src="/images/arton_logo.png" alt="Nice tee meet you! arton.jp")
    div.shopHeader__desc
      div.shopDesc
        h1.shopDesc__title ARTON
        div.shopDesc__desc
          img.shopDesc__photo(src="/images/arton-inside-wide.png" alt="inside arton")
          div.
            You can get your original tee soon after you go to ARTON. <br>
            ARTON is very close from Shibuya Station Hachiko side. <br>
            We prepared original named Tee of your Japaname. Bring your Japaname Code and get your original Tee! The price is 2,800 yen!<br>
            Of cource, you can select another tee design.<br>
          strong "Nice Tee Meet You!"
          br
          a(href="http://arton.jp") Go to ARTON Website

