mixin ateji_search(original_name,  placeholder, button, focus)
  form.jnSearchBox(role="search" method="get" action="/names/candidates/")
    input.jnSearchBox__textbox(id="original_name" name="original_name" type="search" placeholder="#{placeholder || 'Enter Your Name'}" value ="#{original_name || ''}")

    button.jnSearchBox__button(type="submit") #{button || "Japaname!"}


  if focus
    script(type="text/javascript").
      window.onload = function(){
        document.getElementById("original_name").focus();
        //it's in the ateji_search
      }




