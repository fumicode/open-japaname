mixin sharebox( tweet, share_url, hashtag )
  div#share-this-page
    div
      div#share-sns
        h4 Share your name on SNS!

        div.share-buttons
          div#twitter-share.share-button
            a(href="http://twitter.com/share?text=#{tweet}&url=#{share_url}&hashtags=#{hashtag}" onClick="window.open(encodeURI(decodeURI(this.href)), 'tweetwindow', 'width=650, height=470, personalbar=0, toolbar=0, scrollbars=1, sizable=1'); return false;" rel="nofollow")
              img.img-responsive(src="/images/tw-tweet.png" alt="tweet" width="104" height="50")


          div#facebook-share.share-button
            a(href="http://www.facebook.com/share.php?u=#{share_url}" onclick="window.open(this.href, 'FBwindow', 'width=650, height=450, menubar=no, toolbar=no, scrollbars=yes'); return false;")
              img.img-responsive(src="/images/fb-share.png" alt="like!" width="104" height="50")
        textarea#share-textarea #{tweet} #{share_url} ##{hashtag}


        div(style="overflow:hidden")
          div.fb-like(data-share="true" data-width="450" data-show-faces="true")


      div#share-qr
        h4 QR code
        a(data-toggle="modal" data-target="#myModal")
          img.img-responsive.center-block(src="//chart.apis.google.com/chart?cht=qr&chs=150x150&chl=#{share_url}")


  //
    div
      div.modal.fade#myModal(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
        div.modal-dialog
          div.modal-content
            div.modal-header
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
              h4.modal-title#myModalLabel Share this page
            div.modal-body
              p.text-center.h3 #{share_url}
                img.img-responsive.center-block(src="//chart.apis.google.com/chart?cht=qr&chs=500x500&chl=#{share_url}")
            div.modal-footer
              button.btn.btn-default(type="button"  data-dismiss="modal") Close
